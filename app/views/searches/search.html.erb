<div class="col-xs-9">
<h2>Books search for
<% text_field :word %>
</h2>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
      </td>
      <td><%= link_to book.title,  book, class: "book_#{book.id}" %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>